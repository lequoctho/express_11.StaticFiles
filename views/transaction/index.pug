h1 Transaction

form(action="/transactions/create", method="POST", id="transactionForm")
ul
  each transaction in transactions
    li
      span= transaction.userId
      span &nbsp 
      span= transaction.bookId
      span &nbsp 
      if transaction.complete
        a(href="/transactions/" + transaction.id + "/complete/" ) Complete

form(action="/transactions/create", method="POST", id="transactionForm")
  select(form="transactionForm", name="userId")
    each val in users
      option(value=val.id)= val.text 
  select(form="transactionForm", name="bookId")
    each val in books
      option(value=val.id)= val.text 
  button Create